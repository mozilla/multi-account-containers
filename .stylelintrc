{
  "plugins": [
    "stylelint-order"
  ],

  "extends": "stylelint-config-standard",

  "ignoreFiles": ["src/css/*.min.css"],

  "rules": {
    "declaration-block-no-duplicate-properties": true,
    "order/declaration-block-properties-alphabetical-order": true,
    "property-blacklist": [
      "/(min[-]|max[-])height/",
      "/width/",
      "/top/",
      "/bottom/",
      "padding",
      "margin"
    ]
  }
}
